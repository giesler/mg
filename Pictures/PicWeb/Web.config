    <trace enabled="false" requestLimit="40" pageOutput="false" traceMode="SortByTime" localOnly="false"/>
  </system.web>
  <system.webServer>
    <validation validateIntegratedModeConfiguration="false"/>
    <modules>
      <add type="msn2.net.Pictures.PicHttpModule, PictureHttpHelpers" name="PictureContextModule"/>
    </modules>
    <handlers>
      <add name="GetImage" verb="*" path="GetImage.axd" type="msn2.net.Pictures.GetImageHttpHandler, PictureHttpHelpers"/>
    </handlers>
  </system.webServer>
