<?xml version="1.0" encoding="utf-8"?>

<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.0">
  <CommandSet xml:lang="en-US" Name="en-US">
    <CommandPrefix>ListGo</CommandPrefix>
    <Example> show lists </Example>

    <Command Name="ShowLists">
      <Example> show lists </Example>
      <ListenFor> show lists </ListenFor>
      <Feedback> Showing lists... </Feedback>
      <Navigate Target="MainPage.xaml" />
    </Command>

    <Command Name="ShowList">
      <Example> groceries or show groceries </Example>
      <ListenFor> show {list} </ListenFor>
      <ListenFor> go to {list} </ListenFor>
      <ListenFor> {list} </ListenFor>
      <Feedback> Showing {list} </Feedback>
      <Navigate />
    </Command>

    <Command Name="AddTo">
      <Example> add to groceries </Example>
      <ListenFor> add to {list} </ListenFor>
      <Feedback> Adding to {list} </Feedback>
      <Navigate />
    </Command>

    <Command Name="AddItem">
      <Example> add milk to groceries </Example>
      <ListenFor> add {*} to {list} </ListenFor>
      <Feedback> Adding item to {list} </Feedback>
      <Navigate />
    </Command>

    <PhraseList Label="list">
      <Item> groceries </Item>
      <Item> hardware </Item>
      <Item> dome </Item>
    </PhraseList>

  </CommandSet>
</VoiceCommands>
