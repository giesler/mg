<UserControl x:Class="giesler.org.lists.StoreItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="25" d:DesignWidth="200">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="12*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="12*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55" />
            <ColumnDefinition Width="100*" />
        </Grid.ColumnDefinitions>
        <CheckBox Name="itemCheck" Checked="itemCheck_Checked" Tag="{Binding}" Unchecked="itemCheck_Unchecked" Grid.RowSpan="3" VerticalAlignment="Top" />
        <TextBlock TextWrapping="Wrap" Style="{StaticResource PhoneTextExtraLargeStyle}" Text="{Binding Name}" Grid.Column="1" MouseLeftButtonDown="OnLeftMouseDown" MouseLeftButtonUp="OnLeftMouseUp" Margin="12,0" Grid.RowSpan="3" />
        <ProgressBar Name="progressBar1" Maximum="50" Visibility="Collapsed" Grid.Column="1" Grid.Row="1" />
    </Grid>
</UserControl>
