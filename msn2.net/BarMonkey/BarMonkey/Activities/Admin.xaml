<Page x:Class="BarMonkey.Activities.Admin.Admin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Admin">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50px" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Label Grid.Row="0" Grid.Column="1" Style="{DynamicResource DefaultColumnHeaderStyle}">Manage</Label>
		<ListBox Grid.Row="1" Grid.Column="1" Name="activityList" Background="Transparent" HorizontalContentAlignment="Stretch" BorderThickness="0">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Button IsEnabled="{Binding Path=IsEnabled}" Name="selectActivity" Click="selectActivity_Click" Style="{DynamicResource DefaultListButtonStyle}" />
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</Page>
