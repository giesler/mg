<Page x:Class="BarMonkey.Activities.ConfirmDrink"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bnc="clr-namespace:msn2.net.BarMonkey"
    Title="Pour a Drink">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50px" />
			<RowDefinition Height="30px"/>
			<RowDefinition Height="50px"/>
			<RowDefinition Height="*" />
            <RowDefinition Height="64" />
        </Grid.RowDefinitions>
		<Label Name="drinkName" Content="[drink name]" FontSize="22pt" Grid.Row="0" Grid.Column="0" Style="{DynamicResource DefaultTextStyle}" />
		<TextBlock Name="description" Text="[description]" Style="{DynamicResource DefaultTextBlockStyle}" Grid.Row="1" Margin="6,0,0,0" />
        <Label Content="Select your glass size" FontSize="14pt" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Style="{DynamicResource DefaultTextStyle}" />
        <ComboBox Name="containers" Grid.Row="3" SelectionChanged="containers_SelectionChanged" Background="Transparent">            
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<Label FontSize="14pt" Content="{Binding Path=Name}" Tag="{Binding Path=Id}" Style="{DynamicResource DefaultListBoxTextStyle}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
        <bnc:NavigationBar Grid.Row="4" Grid.ColumnSpan="2" x:Name="navBar" HorizontalAlignment="Stretch" />
    </Grid>
</Page>
