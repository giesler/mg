<Page x:Class="msn2.net.BarMonkey.Activities.SelectDrink"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bnc="clr-namespace:msn2.net.BarMonkey"
    Title="Select a drink">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="75" />
        </Grid.RowDefinitions>
        <ItemsControl Name="matchingList" FontSize="22" Background="Transparent" HorizontalContentAlignment="Stretch" Padding="20">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Style="{DynamicResource DefaultListButtonStyle}" Click="Button_Click" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <bnc:NavigationBar Grid.Row="3" Grid.ColumnSpan="2" x:Name="navBar" />
    </Grid>
</Page>
