<Page x:Class="msn2.net.BarMonkey.Activities.BrowseByAlpha"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bnc="clr-namespace:msn2.net.BarMonkey"
    Title="select a drink">
    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="64" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <ListBox Name="drinkList" SelectionChanged="drinkList_SelectionChanged" Style="{DynamicResource DefaultLabelListBoxStyle}" Margin="6" Background="Transparent">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,0,0,6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="42" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <Label Content="{Binding Path=Name}" Tag="{Binding Path=Id}" />
                        <Label Content="{Binding Path=Description}" Tag="{Binding Path=Id}" FontSize="14" Grid.Row="1" Margin="0,-9,0,0" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1" Margin="0,-12,0,0">
            <TextBlock Text="CONTAINER" />
            <ListBox Name="containers" SelectionChanged="containers_SelectionChanged" Background="Transparent" Margin="0,2,0,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Label FontSize="10pt" Content="{Binding Path=Name}" Tag="{Binding Path=Id}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock Text="SWEETNESS" Margin="0,12,0,0" />
            <ListBox Name="sweetness" Background="Transparent">
                <!--                    <ListBox.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Silver" />
                    </ListBox.Resources>-->
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Label FontSize="10pt" Content="{Binding Path=Name}" Tag="{Binding Path=Id}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <bnc:NavigationBar Grid.Row="1" x:Name="navBar" HorizontalAlignment="Stretch" Grid.ColumnSpan="2">
            <bnc:NavigationBar.NextContent>
                <TextBlock Text="pour drink --&gt;" Foreground="Green" FontSize="32" />
            </bnc:NavigationBar.NextContent>
        </bnc:NavigationBar>
    </Grid>
</Page>
