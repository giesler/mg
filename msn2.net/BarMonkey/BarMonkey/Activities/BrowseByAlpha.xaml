    </Page.Resources>
    <Page.Triggers>
        <EventTrigger RoutedEvent="ListBox.SelectionChanged" SourceName="drinkList">
            <EventTrigger.Actions>
                <BeginStoryboard>
                    <Storyboard>
                        <!--                        <PointAnimationUsingKeyFrames BeginTime="00:00:00" 
                                                                       Storyboard.TargetName="pourDrink" 
                                                                       Storyboard.TargetProperty="(Foreground).(LinearGradientBrush.StartPoint)" RepeatBehavior="Forever" >
                            <SplinePointKeyFrame KeyTime="00:00:0" Value="0,1"/>
                            <SplinePointKeyFrame KeyTime="00:00:2" Value=".5,.5"/>
                            <SplinePointKeyFrame KeyTime="00:00:4" Value="1,0"/>
                            <SplinePointKeyFrame KeyTime="00:00:6" Value=".5,.5"/>
                        </PointAnimationUsingKeyFrames>
                        <PointAnimationUsingKeyFrames BeginTime="00:00:00" 
                                                                       Storyboard.TargetName="pourDrink" 
