        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
    </Page.Resources>
    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="26" />
            <RowDefinition />
            <RowDefinition Height="72" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Margin="3,0,0,0" VerticalAlignment="Center">
            <TextBlock Text="SHOW: " Foreground="White" Padding="6,6,0,6" />
            <TextBlock Text="MARGARITAS" Foreground="White" Name="filterMargaritas" MouseDown="OnFilterMargaritas" Padding="6" />
            <TextBlock Text=" | " Foreground="White" Padding="0,5,0,0" />
            <TextBlock Text="COCKTAILS" Foreground="White" Name="filterCocktails" MouseDown="OnFilterCocktails" Padding="6" />
            <TextBlock Text=" | " Foreground="White" Padding="0,5,0,0" />
            <TextBlock Text="ALL" Foreground="LightBlue" FontWeight="Bold" Name="filterAll" MouseDown="OnFilterAll" Padding="6" />
        </StackPanel>
        <ListBox Name="drinkList" SelectionChanged="drinkList_SelectionChanged" Style="{DynamicResource DefaultLabelListBoxStyle}" Margin="0,2,0,0" Background="Transparent" BorderBrush="Transparent" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,0,0,6" Name="drinkItemGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="42" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <Label Content="{Binding Path=Name}" Tag="{Binding Path=Id}" Foreground="White" Name="drinkName" />
                        <TextBlock Text="{Binding Path=Description}" Tag="{Binding Path=Id}" FontSize="14" Grid.Row="1" Margin="6,0,0,0" Foreground="Gray" TextWrapping="WrapWithOverflow" Name="drinkDescription" />
                    </Grid>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBoxItem},AncestorLevel=1 }, Path=IsSelected}" Value="True">
                            
                            <Setter TargetName="drinkName" Property="Foreground" Value="LightBlue" />
                            <Setter TargetName="drinkDescription" Property="Foreground" Value="LightBlue" />
                            
                            <DataTrigger.EnterActions>                                
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="drinkName" Storyboard.TargetProperty="FontSize" From="24" To="30" Duration="0:0:0.5" />
                                        <DoubleAnimation Storyboard.TargetName="drinkDescription" Storyboard.TargetProperty="FontSize" From="14" To="18" Duration="0:0:0.5" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>

                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="drinkName" Storyboard.TargetProperty="FontSize" From="30" To="24" Duration="0:0:0.5" />
                                        <DoubleAnimation Storyboard.TargetName="drinkDescription" Storyboard.TargetProperty="FontSize" From="18" To="14" Duration="0:0:0.5" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>

                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>

            </ListBox.ItemTemplate>
            <ListBoxItem Content="ListBoxItem 1" />
            <ListBoxItem Content="ListBoxItem 2"/>
        </ListBox>
        <TextBlock Text="SIZE" Foreground="White" Margin="9,0,0,0" Grid.Column="1" VerticalAlignment="Center" />
        <ListBox Name="containers" SelectionChanged="containers_SelectionChanged" Background="Transparent" Margin="0,2,0,0" Foreground="White" BorderBrush="Transparent" Grid.Row="1" Grid.Column="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label FontSize="10pt" Content="{Binding Path=Name}" Tag="{Binding Path=Id}" Foreground="White" Name="name" />
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBoxItem},AncestorLevel=1 }, Path=IsSelected}" Value="True">

                            <Setter TargetName="name" Property="Foreground" Value="LightBlue" />

                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="name" Storyboard.TargetProperty="FontSize" From="12" To="16" Duration="0:0:0.5" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>

                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="name" Storyboard.TargetProperty="FontSize" From="16" To="12" Duration="0:0:0.5" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>

                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <bnc:NavigationBar Grid.Row="2" x:Name="navBar" HorizontalAlignment="Stretch" Grid.ColumnSpan="2">
            <bnc:NavigationBar.NextContent>
                <TextBlock Text="POUR DRINK &gt;" Foreground="LightGreen" FontSize="40" FontWeight="Bold" />
            </bnc:NavigationBar.NextContent>
        </bnc:NavigationBar>
    </Grid>
</Page>
