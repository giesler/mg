                        <PointAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(LinearGradientBrush.StartPoint)" Storyboard.TargetName="pourDrink" RepeatBehavior="Forever">
                            <EasingPointKeyFrame KeyTime="0" Value="0.5,0"/>
                            <EasingPointKeyFrame KeyTime="0:0:2" Value="0.5,0.3" />
                            <EasingPointKeyFrame KeyTime="0:0:4" Value="0.5,0.5" />
                            <EasingPointKeyFrame KeyTime="0:0:6" Value="0.5,0.7" />
