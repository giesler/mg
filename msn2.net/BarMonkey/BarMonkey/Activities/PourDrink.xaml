<Page x:Class="BarMonkey.Activities.PourDrink"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Pour a Drink">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition  />
			<ColumnDefinition  />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="50px" />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition Height="80px" />
		</Grid.RowDefinitions>
		<Label Name="drinkName" Content="[drink name]" FontSize="22pt" Grid.Row="0" Grid.Column="0" />
		<StackPanel Grid.Row="1" Grid.Column="0" Grid.RowSpan="3">
			<Label Name="description" Content="[description]" />
			<StackPanel>
				<ItemsControl Name="ingredients">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Label Content="{Binding Path=Name}" />
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>			
			</StackPanel>
		</StackPanel>
		<Button Name="go" Content="GO >" Grid.Row="3" Grid.Column="1" />
		<StackPanel Grid.Column="1" Grid.Row="2" >
			<RadioButton FontSize="14pt" Content="8 oz" />
			<RadioButton FontSize="14pt" Content="10 oz" />
			<RadioButton FontSize="14pt" Content="12 oz" />
			<RadioButton FontSize="14pt" Content="14 oz" />
			<RadioButton FontSize="14pt" Content="16 oz" />			
		</StackPanel>
		<Label Content="Select your glass size" FontSize="14pt" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
	</Grid>
</Page>
