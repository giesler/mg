<Page x:Class="msn2.net.BarMonkey.Activities.NewDrink"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bnc="clr-namespace:msn2.net.BarMonkey"
    Title="New Drink">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="75" />
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="Choose your drink:" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{DynamicResource DefaultTextStyle}" />
        <Button Grid.Column="0" Grid.Row="1" Content="By Name" Style="{DynamicResource DefaultGridButtonStyle}" Click="byName_Click" />
        <Button Grid.Column="0" Grid.Row="2" Content="By Ingredient" Style="{DynamicResource DefaultGridButtonStyle}" Click="byIngredient_Click" />
        <Button Grid.Column="1" Grid.Row="0" Content="Top 10" Style="{DynamicResource DefaultGridButtonStyle}" />
        <Button Grid.Column="1" Grid.Row="1" Content="Shots" Style="{DynamicResource DefaultGridButtonStyle}" />
        <Button Grid.Column="1" Grid.Row="2" Content="Custom" Style="{DynamicResource DefaultGridButtonStyle}" />
        <bnc:NavigationBar Grid.Row="3" Grid.ColumnSpan="2" x:Name="navBar" />
    </Grid>
</Page>
