<Page x:Class="BarMonkey.Activities.SelectUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Admin">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50px" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Label Grid.Row="0" Grid.Column="1" Style="{DynamicResource DefaultColumnHeaderStyle}">Select someone</Label>
		<ItemsControl Grid.Row="1" Grid.Column="1" Name="userList" Background="Transparent" HorizontalContentAlignment="Stretch" BorderThickness="0">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Button Click="selectUser_Click" Style="{DynamicResource DefaultListButtonStyle}" />
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</Grid>
</Page>
