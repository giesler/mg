<Page x:Class="BarMonkey.Activities.Ingredients"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Ingredients">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="80px" />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="80px" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Orientation="Horizontal">
			<Label Content="View:" />
			<ComboBox Name="selectView" SelectionChanged="selectView_SelectionChanged" />
		</StackPanel>
		<StackPanel Grid.Row="1" Grid.Column="0">
			<Button Content="Add new ..." />
		</StackPanel>
		<ListBox Grid.Row="1" Grid.Column="1" Name="ingredientList">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Button Content="{Binding Path=Name}" Tag="{Binding Path=Id}" Click="ingredient_Click" />
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</Page>
