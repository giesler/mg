<Page x:Class="BarMonkey.Activities.ItemEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Ingredient">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="80px" />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="80px" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Label Name="ingredientName" FontSize="18pt" FontWeight="Bold" Content="[Ingredient]" Grid.Column="1" Grid.Row="0" VerticalAlignment="Bottom" />
		<StackPanel Grid.Column="0" Grid.Row="1" >
			<Button Name="save" Content="Save" Click="save_Click"/>
			<Button Name="cancel" Content="Cancel" Click="cancel_Click" />
		</StackPanel>
	</Grid>
</Page>
