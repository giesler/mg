<Page x:Class="msn2.net.BarMonkey.Activities.Statistics"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bnc="clr-namespace:msn2.net.BarMonkey"
    Title="Statistics">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="75" />
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0" Content="Top Drinks" Style="{DynamicResource DefaultGridButtonStyle}" />
        <Button Grid.Column="0" Grid.Row="1" Content="Top Ingredients" Style="{DynamicResource DefaultGridButtonStyle}" />
        <Button Grid.Column="0" Grid.Row="2" Content="Total Dispensed" Style="{DynamicResource DefaultGridButtonStyle}" />
        <Button Grid.Column="1" Grid.Row="0" Content="Most Recent Drinks" Style="{DynamicResource DefaultGridButtonStyle}" />
        <Button Grid.Column="1" Grid.Row="1" Content="# of Drinks" Style="{DynamicResource DefaultGridButtonStyle}" />
        <Button Grid.Column="1" Grid.Row="2" Content="BarNone Age" Style="{DynamicResource DefaultGridButtonStyle}" />
        <bnc:NavigationBar Grid.Row="3" Grid.ColumnSpan="2" x:Name="navBar" />
    </Grid>
</Page>
