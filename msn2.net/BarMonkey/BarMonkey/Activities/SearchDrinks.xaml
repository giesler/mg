<Page x:Class="BarMonkey.Activities.SearchDrinks"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bm="clr-namespace:BarMonkey"
    Title="Search">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition  />
			<ColumnDefinition  />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="80px" />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<TextBox Grid.Row="0" Grid.Column="0" FontSize="22" Name="searchText" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center" />
		<bm:NumericKeypad Grid.Row="1" Grid.Column="0" x:Name="keyPad" />
		<Label Grid.Column="1" Grid.Row="0" Content="" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Name="statusLabel" />
		<ListBox Grid.Column="1" Grid.Row="1" Name="resultList" HorizontalContentAlignment="Stretch" Background="Transparent" BorderThickness="0">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Button FontSize="14pt" Content="{Binding Path=Name}" Click="selectDrink" Tag="{Binding Path=Id}" />
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</Page>
