<Page x:Class="msn2.net.BarMonkey.PartyModeHomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bnc="clr-namespace:msn2.net.BarMonkey"
    Title="welcome">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="39" />
            <RowDefinition Height="*" />
            <RowDefinition Height="46" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">                
                <Button Style="{DynamicResource DefaultMetroButtonStyle}" IsEnabled="{Binding Path=IsEnabled}" Name="newDrink" Click="newDrink_Click" Tag="{Binding Path=PageUrl}" Content="new drink" />
                <Button Style="{DynamicResource DefaultMetroButtonStyle}" IsEnabled="{Binding Path=IsEnabled}" Name="settings" Click="settings_Click" Tag="{Binding Path=PageUrl}" Content="settings" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
