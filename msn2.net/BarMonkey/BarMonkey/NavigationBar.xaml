<UserControl x:Class="msn2.net.BarMonkey.NavigationBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <Grid Height="64" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Style="{DynamicResource EmptyButtonStyle}" Margin="10" Click="back_Click" x:Name="back" HorizontalAlignment="Left">
            <Grid>
                <Image Source="/Resources/appbar.basecircle.rest.png" />
                <Image Source="/Resources/appbar.back.rest.png" />
            </Grid>
        </Button>
        <Button Grid.Column="1" Name="home" Content="HOME" Style="{DynamicResource EmptyButtonStyle}" Margin="10" Click="home_Click" Visibility="Collapsed">
        </Button>
        <Button Grid.Column="2" Style="{DynamicResource EmptyButtonStyle}" Margin="6" IsEnabled="False" Click="next_Click" x:Name="next"/>
    </Grid>
</UserControl>
