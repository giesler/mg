<UserControl x:Class="SLExpressControls.ItemEditor"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    >
    <Grid x:Name="LayoutRoot">
        <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Opacity="0.75" Fill="Gray"
 />
        <Border CornerRadius="3" Background="#e8f7f7" Width="200" Height="150" Margin="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <TextBox x:Name="itemText" Margin="4" Text="{Binding ListItem}" />
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="4">
                    <Button x:Name="ok" Click="ok_Click" Content="OK" Width="60" />
                    <Button x:Name="cancel" Click="cancel_Click" Content="Cancel" Width="60" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
