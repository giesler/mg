<UserControl x:Class="giesler.org.lists.StoreItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="40" d:DesignWidth="200">
    
    <Grid x:Name="LayoutRoot">
        <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
            <CheckBox Name="itemCheck" Checked="itemCheck_Checked" Tag="{Binding}"  Unchecked="itemCheck_Unchecked"/>
            <TextBlock Text="{Binding ListItem}" TextWrapping="Wrap" Margin="0" Style="{StaticResource PhoneTextExtraLargeStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
